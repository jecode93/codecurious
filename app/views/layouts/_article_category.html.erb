<div class="mb-3 space-x-1">
  <% if resource.categories.present? %>
    <% resource.categories.each do |category| %>
      <small class="badge">
        <%= link_to category.name, category_path(category) %>
      </small>
    <% end %>
  <% else %>
    <small class="badge">
      Technology
    </small>
  <% end %>
</div>
