<nav class="bg-primary w-full h-15 px-10 flex items-center">
  <div class="w-full">
    <% if admin_signed_in? %>
      <div class="flex items-center justify-end space-x-3">
        <div data-controller="dropdown" class="relative h-10">
          <button type="button" data-action="dropdown#toggle click@window->dropdown#hide">
            <%= image_tag current_admin.profile_picture, class: "w-10 rounded-full cursor-pointer" %>
          </button>
          <div
            data-dropdown-target="menu"
            class="hidden transition transform origin-top-right absolute right-0 bg-white w-40 px-5 py-2 space-y-2 rounded shadow"
            data-transition-enter-from="opacity-0 scale-95"
            data-transition-enter-to="opacity-100 scale-100"
            data-transition-leave-from="opacity-100 scale-100"
            data-transition-leave-to="opacity-0 scale-95"
          >
            <ul class="space-y-2 divide-y divide-gray-100">
              <li>
                <%= link_to "Profile", profile_path(current_admin), class: "dropdown_link" %>
              </li>
              <li>
                <%= link_to "Log out", destroy_admin_session_path, method: :delete, data: { turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "dropdown_link" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</nav>