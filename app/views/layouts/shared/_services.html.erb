<div class="bg-white dark:bg-gray-800 shadow px-[28px] pt-8 pb-16 lg:pb-24 sticky top-10 mx-auto rounded">
  <h2 class="h2 !text-start !mb-2">Here's how we can help you</h2>
  <hr class="border-gray-200 dark:border-gray-700 mb-10">
  <div class="space-y-16">
    <% services.each do |service| %>
      <div>
        <a href="<%= service[:href] %>" class="text-decoration-none" target="_blank">
          <div class="mb-5">
            <h5 class="mb-2 text-lg font-semibold"><%= service[:title] %></h5>
            <p class="p"><%= service[:description] %></p>
            <button class="button !text-sm">Check it out</button>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
