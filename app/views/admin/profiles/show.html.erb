<div>
  <div class="flex items-center justify-between">
    <div class="md:w-[40%]">
      <h1 class="h1">
        <%= @admin.name %>
      </h1>
      <%= @admin.bio %>
      <div class="mt-3">
        <%= render "layouts/shared/social_links", whatsapp: @admin.whatsapp_number, github: @admin.github, linkedin: @admin.linkedin, facebook: @admin.facebook, instagram: @admin.instagram %>
      </div>
    </div>
    <%= link_to "Edit", edit_profile_path(@admin), class: "button w-fit" %>
  </div>
</div>

<div class="border-b border-gray-200 my-10"></div>

<!-- Current Admin Articles Table-->
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-16 py-3">
        <span>Featured Image</span>
      </th>
      <th scope="col" class="px-6 py-3">
        title
      </th>
      <th scope="col" class="px-6 py-3">
        Except
      </th>
      <th scope="col" class="px-6 py-3">
        Slug
      </th>
      <th scope="col" class="px-6 py-3">
        Author
      </th>
      <th scope="col" class="px-6 py-3">
        Action
      </th>
    </tr>
    </thead>
    <tbody>
    <% @admin_articles.each do |admin_article| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600">
        <td class="p-4">
          <% if admin_article.featured_image.present? %>
            <%= image_tag admin_article.featured_image, class: "w-16 md:w-32 max-w-full max-h-full rounded" %>
          <% else %>
            <%= image_tag "placeholder.png", class: "w-16 md:w-32 max-w-full max-h-full rounded" %>
          <% end %>
        </td>
        <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
          <%= admin_article.title %>
        </td>
        <td class="px-6 py-4 w-100 font-semibold text-gray-900 dark:text-white">
          <%= truncate(strip_tags(admin_article.content.to_s), length: 140) %>
        </td>
        <td class="px-6 py-4">
          <%= admin_article.slug %>
        </td>
        <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
          <%= admin_article.author.name %>
        </td>
        <td class="px-6 py-4 space-x-4">
          <%= link_to "Show", "#", class: "font-medium text-green-600 dark:text-green-500 hover:underline" %>
          <%= link_to "Edit", "#", class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
          <%= link_to "Delete", "#", class: "font-medium text-red-600 dark:text-red-500 hover:underline" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<!-- End Current Admin Articles Table-->

