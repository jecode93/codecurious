<div>
  <div class="flex items-center justify-between">
    <div class="lg:w-[40%]">
      <h1 class="h1 dark:text-white">
        <%= @admin.name %>
      </h1>
      <p class="dark:text-white">
        <%= @admin.bio %>
      </p>
      <div class="mt-3">
        <%= render "layouts/shared/socials", resource: @admin %>
      </div>
    </div>
    <% if policy(@admin).manage? %>
      <%= link_to "Edit", edit_profile_path(@admin), class: "button w-fit" %>
    <% end %>
  </div>
</div>

<%= render "layouts/admin_shared/base/hr" %>

<h2 class="h2 !text-left">Articles</h2>

<%= render "layouts/admin_shared/articles_tab", resources: @admin_articles.published, draft_resources: @admin_articles.draft, archived_resources: @admin_articles.archived %>
