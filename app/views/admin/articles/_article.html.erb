<% if articles.present? %>
  <!-- Current Admin Articles Table-->
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg my-10">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3 w-40">
          <span>Featured Image</span>
        </th>
        <th scope="col" class="px-6 py-3 w-80">
          title
        </th>
        <th scope="col" class="px-6 py-3 w-80">
          Slug
        </th>
        <th scope="col" class="px-6 py-3">
          Author
        </th>
        <th scope="col" class="px-6 py-3 w-40">
          Date
        </th>
        <th scope="col" class="px-6 py-3 text-center">
          Action
        </th>
      </tr>
      </thead>
      <tbody>
      <% articles.each do |article| %>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600">
          <td class="p-4">
            <% if article.featured_image.present? %>
              <%= image_tag article.featured_image, alt: article.title, class: "w-16 md:w-20 max-w-full max-h-full rounded" %>
            <% else %>
              <%= image_tag "placeholder.png", alt: article.title, class: "w-16 md:w-20 max-w-full max-h-full rounded" %>
            <% end %>
          </td>
          <td class="td">
            <%= link_to article.title, article_path(article), class: "hover:underline" %>
          </td>
          <td class="px-6 py-4">
            <%= link_to article.slug, article_url(article, host: "lvh.me", port: 3000), target: "_blank", class: " hover:underline" %>
          </td>
          <td class="td">
            <%= link_to article.author.name, profile_path(article.author), class: " hover:underline" %>
          </td>
          <td class="td">
            <%= show_date(article) %>
          </td>
          <td class="px-6 py-4 space-x-4 text-center">
            <%= link_to "Show", admin_article_path(article), class: "font-medium text-green-600 dark:text-green-500 hover:underline" %>
            <% if policy(article).manage? %>
              <%= link_to "Edit", edit_admin_article_path(article), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
              <%= link_to "Delete", admin_article_path(article), data: { turbo_confirm: "Are you sure you want to delete this article", turbo_method: :delete }, class: "font-medium text-red-600 dark:text-red-500 hover:underline" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
      <tfoot class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3 w-40">
          <span>Featured Image</span>
        </th>
        <th scope="col" class="px-6 py-3 w-80">
          title
        </th>
        <th scope="col" class="px-6 py-3 w-80">
          Slug
        </th>
        <th scope="col" class="px-6 py-3">
          Author
        </th>
        <th scope="col" class="px-6 py-3 w-40">
          Date
        </th>
        <th scope="col" class="px-6 py-3 text-center">
          Action
        </th>
      </tr>
      </tfoot>
    </table>
  </div>
  <!-- End Current Admin Articles Table-->
<% else %>
  <div class="w-full p-4 text-center bg-white border border-gray-200 rounded-lg shadow-sm sm:p-8 dark:bg-gray-800 dark:border-gray-700">
    <h5 class="mb-5 text-3xl font-bold text-gray-900 dark:text-white">No article yet?</h5>
    <%= link_to "Start creating", "#", class: "button" %>
  </div>
<% end %>
