<div class="md:w-1/2 lg:w-1/3 mb-4 px-2">
  <article>
    <%= link_to article_path(article), class: "no-underline" do %>
      <div class="bg-white rounded-lg border border-gray-100 overflow-hidden hover:shadow-md transition-shadow duration-300">
        <% if article.featured_image.attached? %>
          <%= image_tag article.featured_image, class: "w-full h-48 object-cover", alt: article.title %>
        <% else %>
          <%= image_tag "placeholder.png", class: "w-full h-48 object-cover", alt: article.title %>
        <% end %>
        <div class="p-4">
          <small class="px-2 py-1 text-blue-800 bg-blue-100 border border-blue-200 rounded-md text-xs">
            Ruby on Rails
          </small>
          <h4 class="font-semibold mt-3 text-gray-900 text-lg"><%= article.title %></h4>
          <p class="text-gray-600 text-sm"><%= truncate(strip_tags(article.content.to_s), length: 140) %></p>
          <hr class="border-dashed my-3">
          <div class="flex justify-between items-center">
            <div class="flex items-center">
              <%= image_tag article.author.profile_picture, class: "w-6 h-6 rounded-full mr-2", alt: article.author.name %>
              <div class="text-sm">
                <h6 class="text-gray-900 font-medium"><%= article.author.name %></h6>
                <span class="text-gray-500 text-xs"><%= show_date(article) %></span>
              </div>
            </div>
            <div>
              <%= link_to "Read more...", article_path(article), class: "text-blue-600 hover:underline text-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </article>
</div>