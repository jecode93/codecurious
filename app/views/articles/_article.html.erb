<article>
  <%= link_to article_path(article) do %>
    <div class="bg-white rounded overflow-hidden hover:shadow-sm transition-shadow duration-300">
      <% if article.featured_image.attached? %>
        <%= image_tag article.featured_image, class: "w-full h-48 object-cover", alt: article.title %>
      <% else %>
        <%= image_tag "placeholder.png", class: "w-full h-48 object-cover", alt: article.title %>
      <% end %>
      <div class="p-4">
        <small class="badge">
          Ruby on Rails
        </small>
        <h4 class="h4"><%= article.title %></h4>
        <p class="text-gray-600 text-sm"><%= truncate(strip_tags(article.content.to_s), length: 140) %></p>
        <hr class="border-dashed my-3">
        <div class="flex justify-between items-center">
          <div class="flex items-center">
            <%= image_tag article.author.profile_picture, class: "w-6 h-6 rounded-full mr-2", alt: article.author.name %>
            <div class="text-sm">
              <h6 class="h6"><%= article.author.name %></h6>
              <span class="text-gray-500 text-xs"><%= show_date(article) %></span>
            </div>
          </div>
          <div>
            <%= link_to "Read more...", article_path(article), class: "text-blue-600 hover:text-blue-500 text-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</article>
