<section class="bg-white dark:bg-gray-800">
  <div class="grid container px-4 py-15 mx-auto lg:gap-8 xl:gap-0 lg:py-26 lg:grid-cols-12" style="background-image: url('<%= asset_path("noise-bg.webp") %>');">
    <div class="mr-auto place-self-center lg:col-span-7">
      <% hero_text.each do |hero| %>
        <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">
          <%= hero[:title].gsub('Coding', '<span class="text-primary">Coding</span>').html_safe %>
        </h1>
        <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
          <%= hero[:description] %>
        </p>
      <% end %>

      <!-- Handle search for an article -->
      <div class="w-[90%] my-10 dark:text-white">
        <%= search_form_for @q, url: root_path, html: { class: "flex space-x-2", role: "search" } do |f| %>
          <%= f.search_field :title_or_slug_cont, class: "flex-1 p-2 border border-third rounded-md focus:ring focus:ring-blue-300", placeholder: "Ex: Ruby on Rails, Github, Docker", aria: { label: "Search" } %>
          <%= f.submit "Search", class: "outline-button" %>
        <% end %>
      </div>
    </div>
    <div class="hidden lg:mt-0 lg:col-span-5 lg:flex lg:justify-end">
      <%= render "articles/icons/developer" %>
    </div>
  </div>
</section>