<% content_for :form_wrap do %>
  <div class="w-full max-w-md mx-auto p-6 bg-white rounded-lg">
    <h2 class="text-2xl font-semibold mb-6 text-center">Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Enter your email address" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Enter your password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-500 border-gray-300 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "ml-2 text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Sign in", class: "w-full bg-blue-500 text-white py-3 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300" %>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>
  </div>
<% end %>

<%= render "layouts/shared/form_wrap" %>